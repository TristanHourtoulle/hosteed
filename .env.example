# Database
DATABASE_URL="your-database-url"

# NextAuth
AUTH_SECRET="your-auth-secret" # Added by npx auth. Read more: https://cli.authjs.dev/
NEXTAUTH_URL=http://localhost:3000/

# Providers
AUTH_GOOGLE_ID="your-google-id"
AUTH_GOOGLE_SECRET="your-google-secret"

# Stripe
STRIPE_SECRET_KEY="your-stripe-secret-key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="your-stripe-public-publishable-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

# Main app
NEXT_PUBLIC_BASE_URL=http://localhost:3000/

# Email Config
EMAIL_PASSWORD="your-email-password"
EMAIL_LOGIN="your-email-login"
EMAIL_VERIF_TOKEN="your-email-verif-token"
NEXT_PUBLIC_SEND_MAIL=true  # Set to false to disable email sending (except email verification)

#Reset password
RESET_PASSWORD_SECRET= "Reset-pasword-token"

# Email
NEXT_PUBLIC_SEND_MAIL=false # Set to false to disable email sending (except email verification)

# === PERFORMANCE OPTIMIZATIONS (Production) ===

# Cache Redis (recommandé pour la production)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
ENABLE_REDIS_CACHE=false

# Optimisation des images
ENABLE_IMAGE_OPTIMIZATION=false
WEBP_QUALITY=80
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080
IMAGE_COMPRESSION_RATIO=0.8

# Monitoring des performances
ENABLE_PERFORMANCE_MONITORING=false
PERFORMANCE_ALERT_THRESHOLD=5000
PERFORMANCE_ALERT_EMAIL=admin@yourdomain.com

# Analytics et métriques
ENABLE_ANALYTICS=false
ANALYTICS_SAMPLE_RATE=0.1

# Cache TTL (en secondes)
CACHE_TTL_PRODUCTS=3600
CACHE_TTL_IMAGES=86400
CACHE_TTL_USER_DATA=1800
CACHE_TTL_SEARCH=1800

# Migration des images (pour script de migration uniquement)
CONFIRM_MIGRATION=false
